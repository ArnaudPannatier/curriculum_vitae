% Montserrat Font Family with font paths and features
\setsansfont{Montserrat}[
  Path=./fonts/montserrat/,
  Extension = .ttf,
  UprightFont=*-Medium,
  BoldFont=*-Bold,
  ItalicFont=*-Italic,
  BoldItalicFont=*-BoldItalic,
  FontFace = {l}{n}{*-Thin},
  FontFace = {xl}{n}{*-Light},
  FontFace = {xb}{n}{*-ExtraBold},
]

% Commands for specific font weights
\newcommand{\montserratthin}{\sffamily\fontseries{l}\selectfont}
\newcommand{\montserratlight}{\sffamily\fontseries{xl}\selectfont}
\newcommand{\montserratmedium}{\sffamily\fontseries{m}\selectfont}
\newcommand{\montserratbold}{\sffamily\bfseries}
\newcommand{\montserratitalic}{\sffamily\itshape}
\newcommand{\montserratbolditalic}{\sffamily\bfseries\itshape}

\newcommand{\montserratextrabold}[1]{{\sffamily\fontseries{xb}\selectfont\color{SoftBlue} #1}}

